{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/keyword-detector.mjs\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/skill-injector.mjs\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/session-start.mjs\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/pre-tool-enforcer.mjs\"",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/post-tool-verifier.mjs\"",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/persistent-mode.mjs\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/persistent-mode.mjs\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/pre-compact.mjs\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$FACTORY_PROJECT_DIR/scripts/session-end.mjs\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
