{
  "description": "oh-my-droid multi-agent orchestration hooks for keyword detection, tool enforcement, session restoration, and continuation persistence",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/keyword-detector.mjs",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/skill-injector.mjs",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/session-start.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/pre-tool-enforcer.mjs",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/post-tool-verifier.mjs",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/error-recovery.mjs",
            "timeout": 3
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/pre-compact.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/persistent-mode.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/persistent-mode.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/session-end.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${DROID_PLUGIN_ROOT}/scripts/session-idle.mjs",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
